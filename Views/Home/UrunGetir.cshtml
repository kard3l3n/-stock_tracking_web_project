@model WebApplication73.Models.Entity.TBLURUNLER
@{
	ViewBag.Title = "Guncelle";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Guncelle", "Home", FormMethod.Post))
{
	<div class="form-group">
		@Resources.Content.ÜrünId
		@Html.TextBoxFor(m => m.URUNID, new { @class = "form-control" })<br />

		@Resources.Content.ÜrünAd
		@Html.TextBoxFor(m => m.URUNAD, new { @class = "form-control" })<br />

		@Resources.Content.ÜrünKategori
		@Html.DropDownListFor(m => m.TBLKATEGORI.KATEGORIID, (List<SelectListItem>)ViewBag.dgr, new { @class="form-control"})<br />

		@Resources.Content.ÜrünFiyat
		@Html.TextBoxFor(m => m.URUNFIYAT, new { @class = "form-control" })<br />
	</div>
	<div>
		<button class="btn btn-warning">@Resources.Content.Güncelle</button>
	</div>
}
